<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start">

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"></Space>

            <Button
                android:id="@+id/button1"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:text="Student Registration"
                android:layout_gravity="end"
                android:textColor="#ffffff"
                android:background="#C372DA" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">



                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Student Name"
                    android:inputType="text"
                    android:drawableRight="@drawable/student_name"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></Space>


                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:drawableRight="@drawable/student_mobile"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></Space>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></Space>

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/student_password"
                    android:paddingLeft="5dp"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></Space>
                <CheckBox
                    android:id="@+id/showpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Password"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"></CheckBox>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"></Space>
            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Register"
                android:layout_gravity="start"
                android:textColor="#ffffff"
                android:background="#C372DA" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"></Space>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Back to Login"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="#FFFFFF"
                    android:background="#C372DA"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>